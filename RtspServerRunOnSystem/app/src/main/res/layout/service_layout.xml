    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <net.majorkernelpanic.streaming.gl.SurfaceView
            android:id="@+id/serviceView"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <TextureView
